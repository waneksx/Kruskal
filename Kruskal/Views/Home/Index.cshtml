@{
    ViewData["Title"] = "Home Page";
}

<script src="~/js/controller/home.controller.js"></script>
<style>
    .map {
        border: solid 1px whitesmoke;
        border-radius: 10px;
        overflow: hidden;
        height: 650px;
    }
    .management-button {
        margin-top: 5px;
    }
</style>

<div class="row" ng-controller="mapController as map" data-ng-init="map.initialize()">
    <div class="row">
        <div class="col-lg-12">
            <div id="map" class="map"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-info pull-right management-button" style="margin-left: 5px;" ng-click="map.clear();">
                <i class="glyphicon glyphicon-remove"></i>&nbsp;Очистить
            </button>
            <button class="btn btn-info pull-right management-button" style="margin-left: 5px;" ng-click="map.setDrawMode(true);" ng-show="!map.isDrawing && !map.canCalculate">
                <i class="glyphicon glyphicon-edit"></i>&nbsp;Рисовать
            </button>
            <button class="btn btn-info pull-right management-button" style="margin-left: 5px;" ng-click="map.setDrawMode(false);" ng-show="map.isDrawing && !map.canCalculate">
                <i class="glyphicon glyphicon-stop"></i>&nbsp;Остановить рисование
            </button>
            <button class="btn btn-info pull-right management-button" style="margin-left: 5px;" ng-click="map.calculate();" ng-show="map.canCalculate">
                <i class="glyphicon glyphicon-edit"></i>&nbsp;Расчитать
            </button>
        </div>
    </div>
</div>